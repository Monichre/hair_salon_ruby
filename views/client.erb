<h2><%=@client.name %></h2>

<form action="/stylists/<%= @stylist.id %>/clients/<%= @client.id() %>/update" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="update_client_name">Update name</label><br>
  <input id="update_client_name" name="update_client_name" type="text"><br>
  <button type="submit">Update this client</button>
</form>

<form action="/stylists/<%= @stylist.id %>/clients/<%= @client.id() %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">
  <button class= "btn btn-danger" type="submit">Delete this client</button>
</form>
