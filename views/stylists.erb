<% if @stylists.any? %>
  <h2>Browse our current stylists</h2>
  <ul>
    <% @stylists.each do |stylist| %>
    <li><a href="/stylists/<%=stylist.id() %>"><%= stylist.name() %></a>
      <form action="/stylists/<%= stylist.id %>/delete" method="post">
        <input name="_method" type="hidden" value="delete">
        <button class="btn btn-danger"type="submit">Delete this stylist</button>
      </form>
    </li>
    <% end %>
  </ul>
<% else %>

  <p>There are no stylists at this time. Please contact our receptionist, thank you</p>
  <li><span>>555-555-5555</span></li>
<% end %>
